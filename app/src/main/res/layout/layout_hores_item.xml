<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/itemHora_tvTime"
    android:orientation="vertical">

    <TextView
        android:id="@+id/itemHora_tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="00:00"
        android:textSize="50sp" />

    <Switch
        android:id="@+id/itemHora_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemHora_tvTime"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="Repeat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/bttDl"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DL"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/bttDt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bttDl"
            android:layout_weight="1"
            android:text="DT"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/bttDm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bttDt"
            android:layout_weight="1"
            android:text="DM"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/bttDj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bttDm"
            android:layout_weight="1"
            android:text="DJ"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/bttDv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bttDj"
            android:layout_weight="1"
            android:text="DV"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/bttDs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bttDv"
            android:layout_weight="1"
            android:text="DS"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/bttDg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bttDs"
            android:layout_weight="1"
            android:text="DG"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"/>
    </LinearLayout>

</RelativeLayout>